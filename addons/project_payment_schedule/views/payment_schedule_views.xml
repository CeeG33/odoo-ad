<?xml version="1.0"?>
<odoo>
    <record id="payment_schedule" model="ir.actions.act_window">
        <field name="name">Payment Schedule</field>
        <field name="res_model">payment.schedule</field>
        <field name="view_mode">kanban,form,tree</field>
        <field name="domain">[('related_project_id', '=', 'active_id')]</field>
    </record>

    <record id="payment_schedule_view_form" model="ir.ui.view">
        <field name="name">payment.schedule.form</field>
        <field name="model">payment.schedule</field>
        <field name="arch" type="xml">
            <form string="Payment Schedule Form">
                <header>
                    <button name="action_create_invoice" type="object" string="Créer la facture" invisible="schedule_state != 'SC'"/>
                    <!-- <button name="action_create_invoice" type="object" string="Créer la facture"/> -->
                </header>
                <sheet>
                    <group>
                        <field name="related_order_ids" invisible="0"/>
                        <field name="related_project_id" context="{'related_project_id': active_id}" invisible="0"/>
                        <field name="date"/>
                        <field name="global_progress" widget="percentage"/>
                        <field name="down_payment" widget="percentage"/>
                        <field name="schedule_state"></field>
                    </group>
                    <field name="line_ids" nolabel="1" force_save="1"/>
                    <group class="oe_subtotal_footer oe_right" name="lines_total">
                        <field name="lines_total" string="Sous-total"/>
                        <field name="down_payment_total" string="Remboursement sur acompte"/>
                        <field name="grand_total" string="Total"/>
                    </group>
                </sheet>
                
            </form>
            
        </field>
    </record>

    <record id="payment_schedule_view_kanban" model="ir.ui.view">
        <field name="name">payment.schedule.kanban</field>
        <field name="model">payment.schedule</field>
        <field name="arch" type="xml">
            <kanban default_group_by="date" quick_create="True">
                <field name="line_ids"/>
                <field name="cumulative_progress"/>
                <field name="maximum_progress"/>
                <field name="monthly_progress"/>
                <field name="related_project_id"/>
                <templates>
                    <header>
                        <field name="related_project_id"/>
                    </header>
                    <t t-name="kanban-box">
                        
                        <div class="oe_kanban_global_click oe_kanban_content">
                            <!-- <field name="monthly_progress" widget="gauge" options="{'max_field': 'maximum_progress'}"></field> -->

                            <!-- <field name="monthly_progress" widget="progressbar" ></field> -->

                            <div class="row justify-content-between align-items-center">
                                <div class="col-4">
                                    <a class="btn rounded-pill btn-dark" role="button">
                                        <field name="date"/>
                                    </a>
                                </div>

                                <div class="col-8 me-0 text-end">
                                    <a class="btn rounded-pill btn-primary" role="button">
                                        <field name="grand_total" widget="monetary"/><span> € HT</span>
                                    </a>
                                </div>
                            </div>

                            <div class="row justify-content-between align-items-center mt-4">
                                <div class="col-5">
                                    <field name="schedule_state" widget="label_selection" options="{
                                        'classes': {
                                            'SC': 'default',
                                            'IC': 'primary',
                                            'I': 'warning',
                                            'P': 'success'}
                                        }"></field>
                                </div>
                                
                                <div class="col-4">
                                    <field name="monthly_progress" widget="percentpie" options="{'max_field': 'maximum_progress'}" string=""></field>
                                </div>
                                
                            </div>

                            <div class="border-bottom my-4"/>

                            <div>
                                <field class="lh-lg" name="lines_description" widget="text"/>
                            </div>

                        </div>
                        
                    </t>
                    
                    
                </templates>
                
            </kanban>
            
        </field>
    </record>
            

    <record id="payment_schedule_view_tree" model="ir.ui.view">
        <field name="name">payment.schedule.tree</field>
        <field name="model">payment.schedule</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="related_order_ids"/>
                <field name="date"/>
                <field name="line_ids"/>
                
            </tree>
            
        </field>
    </record>
    
</odoo>
