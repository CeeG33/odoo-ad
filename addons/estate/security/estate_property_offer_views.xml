<?xml version="1.0"?>
<odoo>
    <record id="action_property_offers" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('property_type_id', '=', 'active_id')]</field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer Form">
                <sheet>
                    
                    <group>
                        
                        <div class="oe_title">
                            <h1><field name="price"/></h1>
                        </div>

                        <separator/>

                            <group>
                                <field name="partner_id"/>
                                <field name="validity"/>
                                <field name="date_deadline"/>
                                <field name="status"/>
                            </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Offer List" editable="bottom" decoration-success="status == 'a'" decoration-danger="status == 'r'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="status" optional="hidden"/>
                <button name="action_accept_offer" type="object" title="Accept" icon="fa-check" attrs="{'invisible': ['|', ('status', '=', 'a'), ('status', '=', 'r')]}"/>
                <button name="action_reject_offer" type="object" title="Reject" icon="fa-times" attrs="{'invisible': ['|', ('status', '=', 'a'), ('status', '=', 'r')]}"/>
                <field name="property_type_id"/>
            </tree>
        </field>
    </record>
    
</odoo>